
<launch>
	<!-- Initializing the turtlebot model -->
	<arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
	<arg name="x_pos" default="-2.0"/>
	<arg name="y_pos" default="3.5"/>
	<arg name="z_pos" default="0.0"/>

	<!-- World File -->
	<arg name="world_file" value="$(find walker_robot)/world/roombaworld.world"/>

	<!-- Launch Gazebo World -->
	<include file="$(find gazebo_ros)/launch/empty_world.launch">
	<arg name="use_sim_time" value="true"/>
	<arg name="debug" value="false"/>
	<arg name="gui" value="true" />
	<arg name="world_name" value="$(arg world_file)"/>
	</include>

	<!-- Loading xacro file of turtlebot -->
	<param name="robot_description" command="$(find xacro)/xacro --inorder $(find turtlebot3_description)/urdf/turtlebot3_$(arg model).urdf.xacro" />

	<!-- Giving spawn location of the turtlebot -->
  	<node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf"  args="-urdf -model turtlebot3_$(arg model) -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -param robot_description" />

  	<!-- Walker Node -->
  	<node pkg="walker_robot" type="walker" name="walker_node" respawn="false" output="screen"/>

  	<!-- Creating a record for rosbag -->
	<arg name = "record" default = "false" />
  	<arg name="bags_directory" value="$(find walker_robot)/results"/>
  	<node pkg="rosbag" type="record" name="record" args="record --duration=15 -a -o $(arg bags_directory)/recording.bag -x /camera/(.*)" if="$(arg record)" />

</launch>
